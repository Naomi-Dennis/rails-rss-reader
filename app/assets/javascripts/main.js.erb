'use strict'

function detect_page(...path_keywords){
    let path = window.location.href.split("/")
    return path_keywords.filter( (keyword) => { return path.includes(keyword) }).length > 0
}


function init(){ 
   let user = document.getElementById("user") 
   let body = document.getElementsByTagName("body")[0]
   let isLoggedIn = (user.dataset.checkLogin == "true")
   let image = document.getElementById("userBackground").dataset.userBackground
   if(!isLoggedIn){
      body.style.background = "radial-gradient(circle, rgba(148,172,189,1) 0%, rgba(127,145,173,1) 100%)"
   }
   else{
     body.style.background = 'url(' + image + ') no-repeat'
     body.style["background-size"] = "cover"
  
   }
  
}

document.addEventListener("turbolinks:load", (event)=>{init();}); 