#index-container{
    width: 1600px; 
    margin: 0 auto; 
    text-align:center; 
}
#index-container form input[type="submit"]{
    margin-top: 20px; 
    text-align:center;
}
.article-shortcut{
    display:flex; 
    border: 1px solid #000;
    background: rgba(255,255,255,1);
    margin-top: 20px; 
    text-align: center; 
    opacity: 0.7; 
    cursor: pointer; 
    width: 200px;
    height: 180px;
    margin-left: 50px; 
    align-items: center; 
}

.article-shortcut:hover{
    opacity: 1; 
    background: rgba(255,255,255,0.8);
}
.article-shortcut a,.article-shortcut a:hover{
    text-decoration: none; 
    color: black; 
    width: 100%; 
}
.article-shortcut a{
    display: flex; 
    flex-wrap: wrap; 
    align-content: center; 
    width: 100%;
    height: 100%; 
}   
.article-shortcut h2{
    margin-bottom: 0px;
    font-size: 1.5em;
}
.article-shortcut img{
    width: 64px;
    height: 64px; 
    display: block;
    margin: 0 auto; 
    margin-top:10px; 
}

#article-shortcut-container{
    display: flex; 
    flex-wrap: wrap; 
    overflow-y:auto; 
    height: 600px;
width: 100%
}
.article-shortcut span, .article-shortcut h2{
    width: 100%;
    display: block;
}