<div id="login-content">
  <header>
    <h1>Simplicity RSS Reader</h1>
  </header>
  <main id="view-account">
    <%= form_tag user_url(@current_user), method: "patch" do %>
      <p>Select Background</p>
      <div id="backgroundSelectionControls" class="carousel slide" data-ride="carousel" date-interval="false">
        <div class="carousel-inner">
           <input type="radio" id="current_choice" name="background" value="<%= @current_background %>" checked>
           <label for="current_choice" class="carousel-item active">
                <img class="d-block w-100" src="<%= asset_path @current_background %>" alt="First slide">
            </label>
            <% @i = 0 %>
          <% @background_file_names.each do | file_name | %>
            <input type="radio" id="<%= "choice#{@i}" %>" value="<%= file_name%>" name="background">
            <label for="<%=  "choice#{@i}" %>" class="carousel-item">
                  <img class="d-block w-100" src="<%= asset_path file_name %>" alt="Second slide">
            </label>
            <% @i += 1 %>
          <% end %>
        <a class="carousel-control-prev" href="#backgroundSelectionControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#backgroundSelectionControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <br/>




      <p>Change Password Below</p>
      <%= text_field_tag "password", nil, type:"password", placeholder: "New Password"%>
        <p>Current Email:
          <%= @current_user.email %>
        </p>
        <%= text_field_tag "email", nil, placeholder: "New Email"%>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <br/>
          <p>Enter Password to Confirm Changes</p>
          <%= text_field_tag "password_confirmation", nil, type:"password", placeholder: "Current Password"%>
            <br/>
            <%= submit_button "Submit Changes" %>
              <% end %>
  </main>
</div>