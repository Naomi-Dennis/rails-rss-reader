<div id="account-content">
  <header>
    <h1>Simplicity RSS Reader</h1>
  </header>
  <main>
     <%= form_tag user_url(@current_user), method: "patch" do %> 
         <p id="account-username" class="secondary-font" title="Contact admin@rss.com to change your username">Username: <%= @current_user.username %><p>
        <%= text_field_tag "password", nil, placeholder: "Password"%> <br/><br/>
        <%= text_field_tag "email", nil, placeholder: "Email"%> <br/>
        <br/><br/><br/><br/><br/><br/>
        <%= password_confirm_field %> <br/>
        <%= submit_button "Submit Changes" %> 
     <% end %> 
  </main>
</div>
